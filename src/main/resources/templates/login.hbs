{{! Login page }}
{{#partial "body"}}
    {{> signedin.hbs }}

    <div class="container">

        <div class="well" align="center">

            <h2>RIT CO-OP Login</h2>
            <p></p>

            <p>
                Login to co-op system. This is a class project, NOT the real co-op system!!!
            </p>

            <div id="userInput">
                <form action="/" method="POST" role="form">
                    <div class="form-group">
                        <label for="username" class="col-sm-2 control-label">RIT Username</label>
                        <div class="col-sm-10">
                            <input class="form-control" id="username" name="username" type="text" value="" placeholder="RIT Username">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="password" class="col-sm-2 control-label">Password</label>
                        <div class="col-sm-10">
                            <input class="form-control" id="password" name="password" type="password" value="" placeholder="Password">
                        </div>
                    </div>

                    <div class="text-center">
                        {{#unless ghp}}
                            <h3><a href="/login">Login with GitHub</a></h3>
                        {{/unless}}
                        {{#if ghp}}
                            <a href="/github">Go to GitHub info page</a>
                        {{/if}}
                    </div>

                    <button class="button hollow large" type="submit" name="_eventId_proceed" onclick="this.childNodes[0].nodeValue='Logging in, please wait...'">Log in</button>
                </form>
            </div>
            <br>
            <p>Need assistance? Please contact <a href="#">David Grzebinski (dwg7486 at rit dot edu)</a></p>
            <br>
        </div>
    </div>
    <script>
        var link = $("<link />",{ rel: "stylesheet", type: "text/css", href: "/css/ritsignin.css" });
        $('head').append(link);
    </script>



{{/partial}}

{{> base.hbs}}